{
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "prefer-const": "error",
        "no-var": "error"
    },
    "ignorePatterns": [
        "build/",
        "node_modules/",
        "*.config.js"
    ]
}